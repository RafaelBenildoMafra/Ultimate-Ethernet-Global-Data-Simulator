            </div>
            <div class="form-group">
                <label asp-for="Node.Exchange" class="control-label"></label>
                <input asp-for="Node.Exchange" class="form-control" />
                <span asp-validation-for="Node.Exchange" class="text-danger"></span>
            </div>
